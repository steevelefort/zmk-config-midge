#include <dt-bindings/zmk/matrix_transform.h>

/ {

	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <30>;
		rows = <1>;
		map = <
		RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)    RC(0,19) RC(0,18) RC(0,17) RC(0,16) RC(0,15)
		RC(0,5)  RC(0,6)  RC(0,7)  RC(0,8)  RC(0,9)    RC(0,24) RC(0,23) RC(0,22) RC(0,21) RC(0,20)
		         RC(0,10) RC(0,11) RC(0,12)                     RC(0,27) RC(0,26) RC(0,25)
		                           RC(0,13) RC(0,14)   RC(0,29) RC(0,28)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-direct";
		label = "KSCAN";
		
		/* Utilisation des broches GPIO du Nice!Nano avec correction des conflits */
		input-gpios
		= <&gpio0 7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>    // D6 - Modifié pour éviter le conflit avec D2 (utilise P0.07 au lieu de P0.08)
		, <&gpio0 22 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D4 -> gpio0 22 (P0.22)
		, <&gpio0 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // A1 -> gpio0 20 (P0.20)
		, <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>    // D3 -> gpio0 6 (P0.06)
		, <&gpio0 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>    // D2 -> gpio0 8 (P0.08)
		, <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D8 -> gpio0 24 (P0.24)
		, <&gpio1 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D15 -> gpio1 13 (P1.13)
		, <&gpio0 17 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D5 -> gpio0 17 (P0.17)
		, <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>    // A0 -> gpio0 2 (P0.02)
		, <&gpio0 31 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // A2 -> gpio0 31 (P0.31)
		, <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D16 -> gpio0 10 (P0.10)
		, <&gpio1 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>    // D7 -> gpio1 0 (P1.00)
		, <&gpio1 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D14 -> gpio1 11 (P1.11)
		, <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // D10 -> gpio0 11 (P0.11)
		, <&gpio1 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>    // D9 -> gpio1 4 (P1.04)
		;
	};

};
