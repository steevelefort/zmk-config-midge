#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <30>;
        rows = <1>;
        map = <
        RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)    RC(0,19) RC(0,18) RC(0,17) RC(0,16) RC(0,15)
        RC(0,5)  RC(0,6)  RC(0,7)  RC(0,8)  RC(0,9)    RC(0,24) RC(0,23) RC(0,22) RC(0,21) RC(0,20)
                 RC(0,10) RC(0,11) RC(0,12)                     RC(0,27) RC(0,26) RC(0,25)
                                    RC(0,13) RC(0,14)   RC(0,29) RC(0,28)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        input-gpios
            /* Mappage révisé des broches pour Nice!Nano v2
               Ordre basé sur la PCB Midge originale pour nRFMicro */
            = <&gpio0 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // D3
            , <&gpio0 8  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // D2
            , <&gpio0 17 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // D1
            , <&gpio0 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // D0
            , <&gpio0 22 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // D4
            , <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // C6
            , <&gpio1 0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // D7
            , <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // E6
            , <&gpio1 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // B4
            , <&gpio1 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // B5
            , <&gpio0 9  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // B1
            , <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // B3
            , <&gpio1 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // B2
            , <&gpio1 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // B6
            , <&gpio1 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // F7
            ;
    };
};
